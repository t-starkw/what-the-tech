<div class="container post">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3><span>{{title}}</h3>
			<span>{{id}}</span><span style="float:right">Posted by {{user.username}} on
				{{created_at}}</span>
		</div>
		<div class="panel-body">
			<p>{{content}}</p>
		</div>

	</div>
</div>