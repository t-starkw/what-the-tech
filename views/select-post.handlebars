{{> post-info post }}
<div class="container">
    <div class="well">
        {{> comments post.comments}}
        <form class="form-inline comment-form" role="form">
            <div class="form-group">
                <textarea type="text" name="comment-body" placeholder="Your comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-default" type="submit">Post</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/comment.js"></script>
